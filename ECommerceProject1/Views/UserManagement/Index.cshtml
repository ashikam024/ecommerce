
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<h2>Index</h2>

@try
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@(user?.FirstName)</td>
                    <td>@user.Email</td>
                    <td>@(user.IsBlocked ? "Blocked" : "Active")</td>
                    <td>
                        @if (user.IsBlocked)
                        {
                            @Html.ActionLink("Unblock", "UnblockUser", new { userId = user.Id }, new { @class = "btn btn-success" }) }
                        else
                        {
                            @Html.ActionLink("Block", "BlockUser", new { userId = user.Id }, new { @class = "btn btn-danger" })}
                    </td>
                </tr>
            }
        </tbody>
    </table> }
catch (Exception ex)
{
    <p>An error occurred: @ex.Message</p>}
