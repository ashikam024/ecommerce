@model List<ECommerceProject1.Models.Order>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@if (Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                @*<th>User ID</th>*@
                <th>User Name</th>
                <th>Product ID</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    @*<td>@Html.DisplayFor(model => order.UserId)</td>*@
                    <td>@Html.DisplayFor(model => order.UserName)</td>
                    <td>@Html.DisplayFor(model => order.ProductId)</td>
                    <td>@Html.DisplayFor(model => order.Price)</td>
                    <td>@Html.DisplayFor(model => order.Quantity)</td>
                    <td>@Html.DisplayFor(model => order.Total)</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No orders found.</p>
}

